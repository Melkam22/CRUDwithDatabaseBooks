<h3>{{viewTitle}}</h3>

<form action="/books" method="POST" autocomplete="off">
{{!-- <input type="hidden" name="_id" value="{{books._id}}"> --}}{{!-- for edit function --}}
    <div class="form-group">
        <label>Author Name</label>
        <input type="text" class="form-control" name="authorName"
        placeholder="Author Name" value="{{books.authorName}}">
        <div class="text-danger">{{books.authorNameError}}</div>  
    </div>
    <div class="form-group">
        <label>Book Title</label>
        <input type="text" class="form-control" name="bookTite"
        placeholder="Book Title" value="{{books.bookTitle}}">
        <div class="text-danger">{{books.bookTitle}}</div>  
    </div>
    <div class="form-row">
        <div class="form-group col-md-6"> 
        <label>PublicationYear</label>
        <input type="number" class="form-control" name="publicationYear"
        placeholder="publicationYear" value="{{books.publicationYear}}">
    </div>
    <div class="form-group col-md-6">
        <label>PublishedAt</label>
        <input type="text" class="form-control" name="publishedAt"
        placeholder="Published At" value="{{books.publishedAt}}">  
    </div>
    <div class="form-group col-md-6">
        <label>Current Language</label>
        <input type="text" class="form-control" name="currentLanguage"
        placeholder="Current Language" value="{{books.currentLanguage}}">  
    </div>
    <div class="form-group col-md-6">
        <label>Availability</label>
        <input type="text" class="form-control" name="availability"
        placeholder="Availability" value="{{books.availability}}">  
    </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-paper-plane" aria-hidden="true"></i>Submit</button>
        {{!-- <a class="btn btn-secondary" href="employee/list"><i class="fa fa-list-alt" aria-hidden="true"></i>All List</a> --}}
    </div> 
    
</form>

 